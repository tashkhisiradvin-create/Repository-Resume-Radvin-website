        let currentLanguage = 'fa';
        let feedbackData = [
            {
                id: 1,
                firstName: 'ูุฑู',
                lastName: 'ุงุญูุฏ',
                phone: '09123456789',
                feedback: 'ุณูุงู ุฑุงุฏูู ุฌุงู! ฺฉุงุฑ ุดูุง ูุงูุนุงู ูููโุงูุนุงุฏู ุงุณุช. ูุจุณุงุช ุดุฑฺฉุช ูุง ุฑุง ุทุฑุงุญ ฺฉุฑุฏุฏ ู ูุชุฌู ุจุณุงุฑ ุนุงู ุจูุฏ. ุณุฑุนุชุ ุฒุจุง ู ุนููฺฉุฑุฏ ููู ฺุฒ ุจโูุธุฑ ุงุณุช. ุญุชูุงู ุจุฑุง ูพุฑูฺูโูุง ุจุนุฏ ูู ุจุง ุดูุง ููฺฉุงุฑ ุฎูุงูู ฺฉุฑุฏ. ูููู ุจุงุดุฏ! ๐',
                date: new Date().toLocaleDateString('fa-IR')
            }
        ];

        function changeLanguage(lang) {
            currentLanguage = lang;
            
            // Update active button
            document.querySelectorAll('.language-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[data-lang="${lang}"]`).classList.add('active');
            
            // Update HTML attributes
            const html = document.documentElement;
            html.lang = lang;
            html.dir = (lang === 'fa' || lang === 'ar') ? 'rtl' : 'ltr';
            
            // Update all translatable elements
            document.querySelectorAll('[data-translate]').forEach(element => {
                const key = element.getAttribute('data-translate');
                if (translations[lang] && translations[lang][key]) {
                    element.textContent = translations[lang][key];
                }
            });
            
            // Update placeholder
            const textarea = document.querySelector('[data-translate-placeholder]');
            if (textarea) {
                const key = textarea.getAttribute('data-translate-placeholder');
                if (translations[lang] && translations[lang][key]) {
                    textarea.placeholder = translations[lang][key];
                }
            }
            
            // Add fade-in animation
            document.body.classList.add('fade-in');
            setTimeout(() => {
                document.body.classList.remove('fade-in');
            }, 500);
        }

        document.getElementById('feedbackForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const firstName = document.getElementById('firstName').value;
            const lastName = document.getElementById('lastName').value;
            const phone = document.getElementById('phone').value;
            const feedback = document.getElementById('feedback').value;
            
            const newFeedback = {
                id: Date.now(),
                firstName,
                lastName,
                phone,
                feedback,
                date: new Date().toLocaleDateString(currentLanguage === 'fa' ? 'fa-IR' : currentLanguage === 'ar' ? 'ar-SA' : 'en-US')
            };
            
            feedbackData.push(newFeedback);
            displayFeedback();
            
            // Reset form
            this.reset();
            
            // Show success message
            const successMessage = translations[currentLanguage].success_message;
            alert(successMessage);
        });

        function displayFeedback() {
            const feedbackList = document.getElementById('feedbackList');
            const feedbackDisplay = document.getElementById('feedbackDisplay');
            
            if (feedbackData.length > 0) {
                feedbackDisplay.style.display = 'block';
                
                feedbackList.innerHTML = feedbackData.map(item => `
                    <div class="bg-gradient-to-r from-blue-50 to-purple-50 p-6 rounded-xl shadow-md border-r-4 border-blue-500">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h4 class="font-bold text-lg text-gray-800">${item.firstName} ${item.lastName}</h4>
                                <p class="text-gray-600">๐ฑ ${item.phone}</p>
                            </div>
                            <span class="text-sm text-gray-500">${item.date}</span>
                        </div>
                        <p class="text-gray-700 leading-relaxed">${item.feedback}</p>
                    </div>
                `).join('');
            }
        }

        // Display initial feedback on page load
        displayFeedback();

        // Animate skill bars on scroll
        const observerOptions = {
            threshold: 0.5,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const skillBars = entry.target.querySelectorAll('.skill-bar');
                    skillBars.forEach(bar => {
                        bar.style.animation = 'fillBar 2s ease-in-out';
                    });
                }
            });
        }, observerOptions);

        document.querySelectorAll('.card-hover').forEach(card => {
            observer.observe(card);
        });

        // Initialize with Persian
        changeLanguage('fa');
    </script>
